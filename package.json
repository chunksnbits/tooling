{
  "name": "tooling",
  "version": "0.2.0",
  "author": "Daniel Eissing <mail.daniel.eissing@gmail.com>",
  "description": "A opinionated set of standard development tools to help setting up new projects",
  "keywords": [
    "tools",
    "development",
    "linter",
    "boilerplate"
  ],
  "private": true,
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "lint": "tslint -p tsconfig.json && stylelint 'demo/**/*.scss'",
    "release": "standard-version"
  },
  "dependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/node": "^12.0.5",
    "codelyzer": "^5.0.0-beta.1",
    "commitizen": "^3.0.7",
    "commitlint": "^8.0.0",
    "cz-customizable": "^6.2.0",
    "husky": "^2.4.0",
    "lodash": "^4.17.19",
    "rimraf": "^2.6.2",
    "serve": "^11.0.1",
    "standard-version": "^6.0.1",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "tslint": "^5.12.0",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.2.2"
  },
  "devDependencies": {},
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-push": "npm run lint"
    }
  }
}
