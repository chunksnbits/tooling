{
  "name": "tooling",
  "version": "0.0.1",
  "author": "Daniel Eissing <mail.daniel.eissing@gmail.com>",
  "description": "A opinionated set of standard development tools to help setting up new projects",
  "keywords": [
    "tools",
    "development",
    "linter",
    "boilerplate"
  ],
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "commitlint": "commitlint",
    "lint": "tslint -p tsconfig.json && stylelint 'src/**/*.scss'",
    "release": "standard-version"
  },
  "dependencies": {
    "@commitlint/cli": "^6.2.0",
    "@commitlint/config-conventional": "^6.1.3",
    "@types/node": "^10.0.6",
    "codelyzer": "^4.0.1",
    "commitizen": "^2.10.1",
    "commitlint": "^7.0.0",
    "cz-customizable": "^5.2.0",
    "husky": "^0.14.3",
    "rimraf": "^2.6.2",
    "serve": "^9.0.0",
    "standard-version": "^4.4.0",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "tslint": "^5.12.0",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-react": "^2.5.0",
    "typescript": "^3.2.2",
    "yargs": "^11.0.0",
    "yarn": "^1.7.0"
  },
  "devDependencies": {},
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "yarn commitlint",
      "pre-push": "yarn lint"
    }
  }
}
