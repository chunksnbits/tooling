{
  "name": "tooling",
  "version": "0.1.0",
  "author": "Daniel Eissing <mail.daniel.eissing@gmail.com>",
  "description": "A opinionated set of standard development tools to help setting up new projects",
  "keywords": [
    "tools",
    "development",
    "linter",
    "boilerplate"
  ],
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "commitlint": "commitlint -e $GIT_PARAMS",
    "lint": "tslint -p tsconfig.json && stylelint 'src/**/*.scss'",
    "release": "standard-version"
  },
  "dependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/node": "^11.11.3",
    "codelyzer": "^5.0.0-beta.1",
    "commitizen": "^3.0.7",
    "commitlint": "^7.0.0",
    "cz-customizable": "^5.2.0",
    "husky": "^1.3.1",
    "rimraf": "^2.6.2",
    "serve": "^10.1.2",
    "standard-version": "^5.0.1",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "tslint": "^5.12.0",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2",
    "yargs": "^13.2.2",
    "yarn": "^1.7.0"
  },
  "devDependencies": {},
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "yarn commitlint",
      "pre-push": "yarn lint"
    }
  }
}
